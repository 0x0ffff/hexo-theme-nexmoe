<div class="nexmoe-post">
    <div class="nexmoe-post-cover"> 
        <% if (page.cover){ %>
        <img src="<%- page.cover %>">
        <%}  else{ %>
            <img src="<%= theme.background %>">
        <% } %>
        <h1><%= page.title %></h1>
    </div>
  <div class="nexmoe-post-meta">
    <a><i class="nexmoefont icon-calendar-fill"></i><%- date(page.date, "YYYY年MM月DD日") %></a>
    <a><i class="nexmoefont icon-areachart"></i><%= wordcount(page.content) %> 字</a>
    <a><i class="nexmoefont icon-time-circle-fill"></i>大概 <%= min2read(page.content, {cn: 250, en: 160}) %> 分钟</a>
    <% if (page.categories && page.categories.length){ %>
      <%- list_categories(page.categories, {
        show_count: false,
        class: 'nexmoefont icon-appstore-fill ',
        style: 'none',
        separator: ''
      }) %>
    <% } %>
    <% if (page.tags && page.tags.length){ %>
      <%- list_tags(page.tags, {
        show_count: false,
        class: 'nexmoefont icon-tag-fill ',
        style: 'none',
        separator: ' '
      }) %>
    <% } %>
  </div>
  <article>
    <%- page.content %>
  </article>
  <% if (!page.reprint){ %>
    <div class="nexmoe-post-copyright">
      <i class="mdui-list-item-icon nexmoefont icon-info-circle"></i>
      <strong>本文链接：</strong><%- link_to(page.permalink, page.permalink, {external: true}) %><br>
      <strong>版权声明：</strong>本文采用 <%- link_to('https://creativecommons.org/licenses/by-nc-sa/3.0/cn/deed.zh', 'CC BY-NC-SA 3.0 CN', {external: true}) %> 协议进行许可
    </div>
  <% } %>
  <%- partial('_partial/comment') %>
</div>